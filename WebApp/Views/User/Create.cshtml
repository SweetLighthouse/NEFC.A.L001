@using FA.Domain.Enumerations
@using WebApp.Controllers
@model FA.Application.Dtos.Users.UserCreateDto

@{
    ViewData["Title"] = "Create";
}

<!-- Page Header-->
<header class="masthead">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Create user</h1>
                    @* <span class="subheading">Here you can find all the blogs.</span> *@
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">

            <!-- Real Content-->
            <form asp-controller="@nameof(UserController)[..^10]"
                  asp-action="@nameof(UserController.Create)">

                <partial name="_ReturnUrlHiddenInput" />

                
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" placeholder="..." autofocus>
                    <label asp-for="Username"></label>
                </div>

                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="..." type="password">
                    <label asp-for="Password"></label>
                </div>

                <div class="form-floating">
                    <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-select border-top-0 border-end-0 border-start-0 ps-0">
                        <option value="" selected>-- Select Role --</option>
                    </select>
                    <label asp-for="Role"></label>
                </div>

                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="..." autofocus>
                    <label asp-for="Email"></label>
                </div>

                <div class="form-floating">
                    <textarea asp-for="About" class="form-control" placeholder="..." style="height: 12rem"></textarea>
                    <label asp-for="About"></label>
                </div>

                <br />

                <div class="form-floating">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
                </div>

                

            </form>

            <!-- End of Real Content-->

        </div>
    </div>
</div>
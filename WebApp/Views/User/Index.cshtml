@using FA.Application.Dtos.BaseDtos
@using FA.Application.Dtos.Users
@using System.Security.Claims
@using FA.Domain.Enumerations
@using WebApp.Controllers
@using WebApp.Services
@model PageResultDto<UserIndexDto>
@inject AuthorizerService authorizerService

@{
    ViewData["Title"] = "Index";
}

<!-- Page Header-->
<header class="masthead">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Users</h1>
                    <span class="subheading">Here you can find all the users in the website.</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">

            <!-- Real Content-->
            @if (authorizerService.HasPermission(User.FindFirst(ClaimTypes.Role)?.Value, ModuleAction.CreateUser))
            {
                <p>
                    <a asp-controller="@nameof(UserController)[..^10]"
                       asp-action="@nameof(UserController.Create)">
                        Create New
                    </a>
                </p>
            }
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @nameof(UserIndexDto.Username)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @if (authorizerService.HasPermission(User.FindFirst(ClaimTypes.Role)?.Value, ModuleAction.DetailsUser))
                                {
                                    <a asp-controller="@nameof(UserController)[..^10]"
                                       asp-action="@nameof(UserController.Details)"
                                       asp-route-id="@item.Id">
                                        &#x2139;
                                    </a>
                                }

                                @if (authorizerService.HasPermission(User.FindFirst(ClaimTypes.Role)?.Value, ModuleAction.UpdateUser))
                                {
                                    <a asp-controller="@nameof(UserController)[..^10]"
                                       asp-action="@nameof(UserController.Edit)"
                                       asp-route-id="@item.Id">
                                        &#x270E;
                                    </a>

                                    <a asp-controller="@nameof(UserController)[..^10]"
                                       asp-action="@nameof(UserController.ChangePassword)"
                                       asp-route-id="@item.Id">
                                        &#x1F511;
                                    </a>
                                }

                                @if (authorizerService.HasPermission(User.FindFirst(ClaimTypes.Role)?.Value, ModuleAction.DeleteUser))
                                {
                                    <a asp-controller="@nameof(UserController)[..^10]"
                                       asp-action="@nameof(UserController.Delete)"
                                       asp-route-id="@item.Id">
                                        &#x274C;
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-center gap-2 mb-4">

                <!-- First Page -->
                @if (Model.Page > 3)
                {
                    <a class="btn btn-primary btn-sm text-uppercase"
                       asp-controller="@nameof(UserController)[..^10]"
                       asp-action="@nameof(UserController.Index)"
                       asp-route-page="1">
                        1
                    </a>
                }

                <!-- Previous Pages -->
                @for (int i = Model.Page - 2; i < Model.Page; i++)
                {
                    if (i > 0)
                    {
                        <a class="btn btn-primary btn-sm text-uppercase"
                           asp-controller="@nameof(UserController)[..^10]"
                           asp-action="@nameof(UserController.Index)"
                           asp-route-page="@i">
                            @i
                        </a>
                    }
                }

                <!-- Current Page (Disabled) -->
                <form asp-controller="@nameof(UserController)[..^10]"
                    asp-action="@nameof(UserController.Index)"
                    method="get">
                    <input placeholder="@Model.Page" name="page" type="number" min="1" max="@Model.TotalPage" value="@Model.Page" class="form-control form-control-sm w" style="max-width: 70px;" />
                </form>
                @* <a class="btn btn-secondary btn-sm text-uppercase disabled"> *@
                @*     @Model.Page *@
                @* </a> *@

                <!-- Next Pages -->
                @for (int i = Model.Page + 1; i <= Model.Page + 2 && i <= Model.TotalPage; i++)
                {
                    <a class="btn btn-primary btn-sm text-uppercase"
                       asp-controller="@nameof(UserController)[..^10]"
                       asp-action="@nameof(UserController.Index)"
                       asp-route-page="@i">
                        @i
                    </a>
                }

                <!-- Last Page -->
                @if (Model.Page < Model.TotalPage - 2)
                {
                    <a class="btn btn-primary btn-sm text-uppercase"
                       asp-controller="@nameof(UserController)[..^10]"
                       asp-action="@nameof(UserController.Index)"
                       asp-route-page="@Model.TotalPage">
                        @Model.TotalPage
                    </a>
                }

            </div>


            <!-- End of Real Content-->

        </div>
    </div>
</div>
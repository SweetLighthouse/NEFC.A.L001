@using FA.Application.Dtos.AccountDtos
@using WebApp.Controllers
@model AccountUpdateDto

@{
    ViewData["Title"] = "Update Account";
}


<!-- Page Header-->
<header class="masthead">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Update Account</h1>
                    <span class="subheading">Here you can change your account information.</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">

            <!-- Real Content-->
            <form asp-controller="@nameof(AuthenticationController)[..^10]"
                  asp-action="@nameof(AuthenticationController.UpdateAccount)">

                <partial name="_ReturnUrlHiddenInput" />
                <input type="hidden" asp-for="UpdatedAt" />

                <div class="form-floating">
                    <input asp-for="Username" class="form-control" placeholder="...">
                    <label asp-for="Username"></label>
                </div>

                <div class="form-floating">
                    <input asp-for="CurrentPassword" class="form-control" placeholder="..." autofocus type="password">
                    <label asp-for="CurrentPassword">Current Password</label>
                </div>

                <div class="form-floating">
                    <input asp-for="NewPassword" class="form-control" placeholder="..." type="password">
                    <label asp-for="NewPassword">New Password</label>
                </div>

                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="...">
                    <label asp-for="Email"></label>
                </div>

                <div class="form-floating">
                    <textarea asp-for="About" class="form-control" placeholder="..." style="height: 12rem"></textarea>
                    <label asp-for="About"></label>
                </div>

                <br />

                <div class="form-floating">
                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>
                    <a asp-controller="@nameof(AuthenticationController)[..^10]"
                       asp-action="@nameof(AuthenticationController.DeleteAccount)"
                       class="btn btn-danger">
                        Delete Account
                    </a>
                    <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
                </div>
            </form>
            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }

            <!-- End of Real Content-->

        </div>
    </div>
</div>

@using FA.Application.Dtos.BlogDtos
@using WebApp.Controllers
@model BlogDetailDto

@{
    ViewData["Title"] = "Delete";
}


<!-- Page Header-->
<header class="masthead">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>@Model.Name</h1>
                    <span class="subheading mb-3">Are you sure to delete?</span>
                    <form asp-controller="@nameof(BlogController)[..^10]"
                          asp-action="@nameof(BlogController.Delete)"
                          asp-route-id="@Model.Id"
                          class="mb-2">

                        <partial name="_ReturnUrlHiddenInput" />

                        <button typw="submit" class="btn btn-danger">Delete</button>
                        <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>
